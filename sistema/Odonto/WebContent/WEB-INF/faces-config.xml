<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>	
	</application>
	
	<converter>
		<converter-id>simpleConverter</converter-id>
		<converter-class>br.gov.ma.seati.converters.SimpleIndexConverter</converter-class>
	</converter>
	
	<converter>
		<converter-id>converter.CpfConverter</converter-id>
		<converter-class>br.gov.ma.seati.converters.CpfConverter</converter-class>
	</converter>
	
	<application>
		<resource-bundle>
			<base-name>message</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

</faces-config>
